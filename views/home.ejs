<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %> 
<body>
    <header>
        <nav>
            <% if (currentUser) { %>
                <h1>Welcome, <%= currentUser.username %> </h1>
                <form action="/sessions?_method=DELETE" method="POST">
                    <input type="submit" value="Log Out">
                </form>
                <a href="/index">Upload Photo</a>
               <% } else { %>
                <a href="/users/new">
                    <h1>sign up</h1>
                </a>
                <a href="/sessions/new">
                    <h1>Log In</h1>
                </a>
               <% } %>
        </nav>
    </header>

    <div id="main">

        <% if (images[0]) { %>
            <% let i = Math.floor(Math.random() * images.length) %> 
            <h1><%= images[i].title %></h1>
            <a href="/<%= images[i].id %> ">
                <img src="<%= images[i].imgsrc %> " alt="<%= images[i].title %> "> 
            </a>
        <% } else { %>
            <h1>Nothing to see here</h1>
        <% } %>


    </div>
</body>
</html>
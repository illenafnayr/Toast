<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head.ejs') %>
    </head>
<body>
    <%- include('./partials/header.ejs') %> 

    <form action="/index" method="POST">
        <input type="hidden" name="username" value="<%= currentUser.username %>">
        <input type="text" name="title" placeholder="title" id="">
        <input type="text" name="imgsrc" placeholder="image source" id="">
        <input type="text" name="tags" placeholder="tags" id="">
        <input type="text" name="tags" placeholder="tags" id="">
        <input type="text" name="tags" placeholder="tags" id="">
        <input type="submit" value="Submit">
    </form>

    <h1>Your Images</h1>
    <div>

    </div>
    <% for( let i = 0; i < images.length; i++ ) { %>
        <div class="imgs">
            <h2><%= images[i].title %></h2>
            <img src="<%= images[i].imgsrc %> " alt="<%= images[i].title %> ">
            <button type="button" name="button"><a href="/index/<%=images[i].id%>/edit">Edit</a></button>
            <form action="/index/<%=images[i]._id%>?_method=DELETE" method="POST">
                <input type="submit" value="DELETE"/>
            </form>
        </div>
    <% } %>

</body>
</html>